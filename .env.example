# ============================================================================
# Rooney Capital Trading System - Environment Variables
# ============================================================================
# Copy this file to `.env` and fill in your actual credentials.
# NEVER commit the real `.env` file to version control!
#
# These variables are referenced in config.yml using ${VAR_NAME} syntax.
# ============================================================================

# ----------------------------------------------------------------------------
# Databento Configuration
# ----------------------------------------------------------------------------
# API key for live market data from Databento
# Get your key at: https://databento.com/portal/keys
DATABENTO_API_KEY=your_databento_api_key_here

# ----------------------------------------------------------------------------
# TradersPost Configuration
# ----------------------------------------------------------------------------
# Webhook URL for order/trade notifications
# Note: TradersPost only provides webhook integration (no REST API)
# Find your webhook URL in the TradersPost strategy settings
TRADERSPOST_WEBHOOK_URL=https://trading.traderspost.io/trading/webhook/YOUR_WEBHOOK_ID

# ----------------------------------------------------------------------------
# Safety Controls
# ----------------------------------------------------------------------------
# Emergency circuit breaker - set to 'true' for paper trading mode
# Set to 'false' only after thorough testing and validation
POLICY_KILLSWITCH=true

# ----------------------------------------------------------------------------
# Optional Overrides
# ----------------------------------------------------------------------------
# Uncomment to override default commission rate (default: 1.25 per side)
# PINE_COMMISSION_PER_SIDE=1.25

# Uncomment to override pair mappings (default: ES↔NQ, GC↔SI, etc.)
# PINE_PAIR_MAP='{"ES":"NQ","NQ":"ES","GC":"SI","SI":"GC"}'
# Or point to a JSON file:
# PINE_PAIR_MAP_PATH=/opt/pine/runtime/pair_map.json

# ----------------------------------------------------------------------------
# Advanced Configuration
# ----------------------------------------------------------------------------
# Custom location for runtime configuration (if not using default)
# PINE_RUNTIME_CONFIG=/opt/pine/runtime/config.yml

# Custom location for heartbeat file
# PINE_HEARTBEAT_FILE=/var/run/pine/worker_heartbeat.json

# Heartbeat write interval in seconds
# PINE_HEARTBEAT_WRITE_INTERVAL=30
